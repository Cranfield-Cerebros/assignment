runTimeControl1
{
    type            runTimeControl;
    libs            (utilityFunctionObjects);
    controlMode     trigger;
    triggerStart    1;
    conditions
    {
        condition1
        {
            type            average;
            functionObject  forceCoeffs;
            fields          (Cd Cl);
            tolerance       0.0001;
            window          50;
            windowType      approximate;
        }
    }
}

runTimeControl2
{
    type            runTimeControl;
    libs            (utilityFunctionObjects);
    conditions
    {
        conditions1
        {
            type            maxDuration;
            duration        100;
        }
    }
    satisfiedAction setTrigger;
    trigger         1;
}
