FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nuTilda;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 2e-04;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    lowerAirfoil
    {
        type            fixedValue;
        value           uniform 5e-07;
    }
    upperAirfoil
    {
        type            fixedValue;
        value           uniform 5e-07;
    }
    trailingEdge
    {
        type            fixedValue;
        value           uniform 5e-07;
    }
    BaseAndTop
    {
        type            empty;
    }
}